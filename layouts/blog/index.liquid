---
layout: layout.liquid
---
<div class="container">
    <p><strong>Template Name:</strong> blog/index.liquid</p>

    <h1>{{ title }}</h1>
    {{ content }}

    {% for post in collections.blog %}
        <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
        <em>{{ post.date | date: "%Y-%m-%d" }}</em>
    {% endfor %}
</div>